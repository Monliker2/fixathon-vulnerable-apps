@page
@model App.Pages.MyProfileModel
<!DOCTYPE html>
<html>
<head>
    <title>My Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cosmicjs/5.6.0/cosmic.min.css">
</head>
<body>  
    
<h1>@Model.Profile.Name</h1>
<h2>Profile Photo</h2>
<img src="static/profile_photo@{@Model.Profile.Id}.png" alt="Profile Photo">
    
<form action="api/profile/upload_photo" method="post">
    <label for="profile-photo">Upload Profile Photo:</label>
    <input type="file" id="profile-photo" name="profile-photo">
    <button type="submit">Upload</button>
</form>

<form action="api/profile/upload_photo_url" method="post">
    <label for="profile-photo-url">Upload Profile Photo from URL:</label>
    <input type="url" id="profile-photo-url" name="profile-photo-url">
    <button type="submit">Upload</button>
</form>
<li>
    @foreach (var article in @Model.Profile.Articles)
    {
        <ul>
            <article>
                <h1><a href="/articles/@article.Id">@article.Title</a></h1>
                    <p>@Html.Raw(article.Content);</p>
            </article>
        </ul>
    }
</li>
</body>
</html>